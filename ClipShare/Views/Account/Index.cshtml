@if(User.Identity.IsAuthenticated)
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <span class="nav-link text-info-emphasis">@User.GetName()</span>
        </li>

        @if (User.IsInRole(SD.UserRole))
        {
            <li class="nav-item">
                <a class="nav-link text-white "></a>
            </li>
        }

        <li class="nav-item">
            <a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="Logout">
                <i class="bi bi-door-closed-fill"></i>
                Logout
            </a>
    </ul>
}

else
{
    <div class="me-1">
        <a class="btn btn-secondary me-2 @Html.IsActive("Account", "Login")" asp-controller="Account" asp-action="Login">
            <i class="bi bi-box-arrow-in-right"></i>
            Login
        </a>
        <a class="btn btn-secondary me-2 @Html.IsActive("Account", "Register")" asp-controller="Account" asp-action="Register">
            <i class="bi bi-person-plus-fill"></i>
            Register
        </a>
    </div>
}